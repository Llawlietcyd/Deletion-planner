# Database URL — defaults to local SQLite file
# DATABASE_URL=sqlite:///deletion_planner.db

# To use MySQL instead:
# DATABASE_URL=mysql+mysqlconnector://user:password@localhost/deletion_planner

# LLM Provider — "mock" (default), "claude", or "openai"
LLM_PROVIDER=mock

# Claude API key (only needed if LLM_PROVIDER=claude)
# ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key (only needed if LLM_PROVIDER=openai)
# OPENAI_API_KEY=sk-...

# Flask settings
FLASK_APP=app.py
FLASK_ENV=development
